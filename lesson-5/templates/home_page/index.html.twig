{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div id="productList" class="example-wrapper">
    {% for product in allProducts %}
        <div class="product">
            <div>{{ product.title }}</div>
            <div>{{ product.description }}</div>
            <div>{{ product.price }}</div>
            <a href="/product/{{ product.id }}">/product/{{ product.id }}</a>
        </div>
    {% endfor %}
    <button id="loadProducts" type="button">Ещё</button>
</div>

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('loadProducts') }}
{% endblock %}

{{ render(controller('App\\Controller\\ProductController::new')) }}

{% endblock %}